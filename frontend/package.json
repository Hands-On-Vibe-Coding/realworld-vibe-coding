{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:fresh": "bash scripts/dev-start.sh",
    "dev:quick": "bash scripts/quick-start.sh",
    "dev:clean": "bash scripts/cleanup-and-start.sh",
    "cleanup": "bash scripts/cleanup.sh",
    "cleanup:status": "bash scripts/cleanup.sh --status",
    "cleanup:verbose": "bash scripts/cleanup.sh --verbose",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:working": "vitest run src/__tests__/ src/lib/utils.test.ts src/lib/validation.test.ts src/components/Common/ src/components/Article/ArticleList.basic.test.tsx src/components/Article/ArticlePreview.simple.test.tsx src/components/Comment/CommentForm.simple.test.tsx src/pages/Home.simple.test.tsx",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report",
    "e2e:codegen": "playwright codegen",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@mantine/core": "^8.1.1",
    "@mantine/form": "^8.1.1",
    "@mantine/hooks": "^8.1.1",
    "@mantine/notifications": "^8.1.1",
    "@tabler/icons-react": "^3.34.0",
    "@tanstack/react-query": "^5.80.10",
    "@tanstack/react-router": "^1.121.27",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "zod": "^3.25.67",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@mantine/modals": "^8.1.1",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "date-fns": "^4.1.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "mantine-form-zod-resolver": "^1.3.0",
    "postcss": "^8.5.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
